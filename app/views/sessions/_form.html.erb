  <% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>
<%= form_for :user, url: "/login", method: "post" do |f| %>
  <%= f.text_field :name, placeholder: "Name" %>
  <%= f.password_field :password, placeholder: "Password" %>
  <%= f.submit %>
  <br>
  <%= link_to('Log in with Google!', '/auth/google_oauth2') %> 
<% end %>